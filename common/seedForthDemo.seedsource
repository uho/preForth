\ ---- self growing array

: cmove ( c-addr1 c-addr2 u -- )
   BEGIN
     ?dup
   WHILE
     >r
     over c@ over c!
     1+ swap 1+ swap
     r> 1-
   REPEAT
   2drop ;

\ : place ( c-addr1 u c-addr2 -- )
\    2dup >r >r 1+ swap cmove  r> r> c! ;

: cell+ ( addr1 -- addr2 )
    1 cells + ;

: 2@ ( addr -- x1 x2 )
   dup cell+ @ swap @ ;

: 2! ( x1 x2 addr -- )
   swap over ! cell+ ! ;

Create m  1 , 2 ,

t{ m 2@  m 2!  m @  m cell+ @ -> 1 2 }t



: resize-array ( addr1 size1 -- addr2 size2 ) 
    over swap \ addr1 addr1 size1 
    dup 2* dup cells alloc swap \ addr1 addr1 size1 addr2 size2
    >r dup >r  swap cells cmove \ addr1 
    dispose
    r> r> ;

Definer Array ( n -- )  
    create >r dup , 
           here >r 0 ,
           cells alloc r> !  \ { size | addr }
    r> does> ( n -- addr )
      BEGIN ( n body )
         2dup @ < 0= 
      WHILE ( n body )
         dup >r 2@ resize-array r@ 2! r>
      REPEAT ( n body ) 
      cell+ @ swap  cells +
;

